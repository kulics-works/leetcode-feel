convert := (s: str, numRows: int->v: str) {
    numRows == 1 ? {
        <- s
    }
    !res := [list [list byte]](numRows)
    !direct := true
    !n := 0
    s @ v {
        res[n] += v
        n == numRows-1 ? {
            direct = false
        } n == 0 ? {
            direct = true
        }
        direct ? {
            n += 1
        } _ {
            n -= 1
        }
    }
    1 ..< numRows @ i {
        res[0] += res[i]
    }
    <- res[0].to_str()
}